generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String       @id @default(uuid())
  title       String
  description String
  price       Float
  status      GameStatus
  platform    GamePlatform
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  categoryId  String
  category    Category     @relation(fields: [categoryId], references: [id])
}

enum GameStatus {
  available
  unavailable
}

enum GamePlatform {
  xbox
  ps
  nintendo
  pc
}

model Category {
  id        String     @id @default(uuid())
  title     Categories @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  games     Game[]
}

enum Categories {
  action
  adventure
  rpg
  strategy
  sports
  horror
}
